{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/Ot",
                "/EHsc",
                "\"${workspaceFolder}\\*.cpp\"",
                "/nologo",
                "/Fe${workspaceFolder}\\logger.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "compiler: cl.exe"
        },
        {
            "type": "cppbuild",
            "label": "debug build",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/Od",
                "/EHsc",
                "\"${workspaceFolder}\\*.cpp\"",
                "/nologo",
                "/Fe${workspaceFolder}\\logger.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "compiler: cl.exe"
        },
    ]
}